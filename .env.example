# .env.example

# -------------------------------
# CORE DJANGO SETTINGS
# -------------------------------
# WARNING: keep the secret key used in production secret!
SECRET_KEY=replace_this_with_a_real_secret_key_in_your_local_env
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# -------------------------------
# DATABASE (POSTGRES)
# -------------------------------
POSTGRES_DB=intentlink
POSTGRES_USER=intentlink
POSTGRES_PASSWORD=a_strong_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# -------------------------------
# CACHE & QUEUE (REDIS)
# -------------------------------
REDIS_URL=redis://cache:6379/0

# -------------------------------
# EXTERNAL SERVICES & BLOCKCHAIN
# -------------------------------
DAGSCANNER_URL=https://dagscanner.example.com/api/v1/analyze/
IPFS_API_URL=https://ipfs.infura.io:5001

# BlockDAG "Awakening" Testnet Configuration
BLOCKDAG_RPC_URL=https://rpc.awakening.bdagscan.com/
BLOCKDAG_CHAIN_ID=1043

# -------------------------------
# RELAYER CONFIGURATION
# -------------------------------
# IMPORTANT: DO NOT COMMIT THIS KEY TO GIT. This is for local development only.
# Use a secure secret manager in production.
RELAYER_PRIVATE_KEY=0x...your_test_private_key
RELAYER_ADDRESS=0x...your_test_wallet_address

# -------------------------------
# LLM & OTHER API KEYS
# -------------------------------
LLM_API_KEY=sk-...
SENTRY_DSN=